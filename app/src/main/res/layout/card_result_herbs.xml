<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_result_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/example_onion" />
            <Space
                android:layout_width="16dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/card_result_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/herbal_name"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp"/>
                <TextView
                    android:id="@+id/card_result_latin_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latin_name"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textStyle="italic" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <TextView
                    android:id="@+id/card_result_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text="@string/herbal_description"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>